{
  "mount": {
	"public": "/",
	"src": "/_dist_"
  },
  "plugins": [
    [
      "@snowpack/plugin-run-script",
      { "cmd": "tsc --noEmit", "watch": "$1 --watch" }
    ],
    "@snowpack/plugin-dotenv",
    "@snowpack/plugin-webpack"
  ],
  "devOptions": {
    "open": "none"
  },
  "installOptions": {
    "sourceMap": true
  },
  "buildOptions": {
    "sourceMaps": true
  }
}
